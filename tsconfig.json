{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "types": ["@types/chrome", "node"]
    },
    "include": [
        "extensions/**/*",
        "extensions/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*/build",
        "**/*.spec.ts"
    ]
}
